*
  padding 0
  margin 0
  box-sizing border-box

body
  overflow hidden

#loading
  user-select none
  pointer-events none
  position fixed
  top 0
  left 0
  height 100vh
  width 100vw
  background #ffffffcc
  padding 2em
  font-size 3em
  transition opacity 0.6s
  opacity 0
  &.active
    pointer-events all
    opacity 1

#app, #input, #output
  width 100%
  user-select none

#input
  height 100vh
  position relative
  background-repeat no-repeat
  background-size contain
  background-position center

#placeholder
  line-height 100vh
  text-align center
  font-size 8vmin
  color gray

#file
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity 0

#output
  position fixed
  bottom 0
  left 0
  text-align center
  padding 1em 0 0.5em
  white-space nowrap
  overflow-y hidden
  overflow-x auto
  background white
  transition opacity 0.6s
  opacity 0
  &.active
    opacity 1

.colors
  display inline-block

.colors-color
  display block
  height 2em
  width 7em

.colors-name
  line-height 2